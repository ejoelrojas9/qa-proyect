<div class="container">
  <div class="row mt-5 bg-dark text-white">
    <div class="col-md-5 col-md-offset-1">
      <div class="login-alt-container">
        <h2 class="push-top-bottom mt-5 p-3">
          <i class="fa fa-bolt"></i>Quality Assunce Practice
        </h2>
      </div>
    </div>
    <div class="col-md-5 mt-5">
      <div class="login-title text-center">
        <h2>Forgot your password?</h2>
      </div>
    <div class="block push-bit mt-5">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div><%= render '/shared/flash' %></div>
        <div class="form-group mt-4">
          <div class="col-xs-12">
            <div class="input-group">
              <span class="input-group-addon"></span>
              <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: 'form-control input-lg', placeholder: 'Email' %>
            </div>
          </div>
        </div>
        <div class="actions mt-4 text-end">
            <%= f.submit " > Send me reset password instructions", class: 'btn btn-in btn-primary' %>
          </div>
      <% end %>
      <div class="form-group mt-4 p-3">
        <div class="text-end">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>









